create database Cerberus;

use database Cerberus;

create table 7Wave (
	id int Auto_Increment,
	name varchar (40),
	patente varchar (6),
	data_nasc date,
	Pel_Fuz varchar (6)
);

create table NavSea (
	id int Auto_Increment,
	name varchar (40),
	patente varchar (6),
	data_nasc date,
	Pel_Fuz varchar (6)
);

create table Recon (
	id int Auto_Increment,
	name varchar (40),
	patente varchar (6),
	data_nasc date,
	Pel_Fuz varchar (6)
);

